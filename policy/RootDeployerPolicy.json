{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "RootDeployerAssumeRole",
            "Effect": "Allow",
            "Action": [
                "iam:ListRoles",
                "sts:AssumeRole"
            ],
            "Resource": "*"
        },
        {
            "Sid": "TerraformStateS3ListAllow",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:CreateBucket",
                "s3:PutBucketOwnershipControls",
                "s3:PutBucketPolicy",
                "s3:GetBucketVersioning",
                "s3:GetEncryptionConfiguration",
                "s3:GetBucketPolicy",
                "s3:GetBucketPublicAccessBlock",
                "s3:PutBucketVersioning",
                "s3:PutEncryptionConfiguration",
                "s3:PutBucketPublicAccessBlock"
            ],
            "Resource": [
                "arn:aws:s3:::*-tfstates"
            ]
        },
        {
            "Sid": "TerraformStateS3RWAllow",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::*-tfstates/*"
            ]
        },
        {
            "Sid": "TerraformStateDynamodbAllow",
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:CreateTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:*:*:table/tfstates-locktable"
            ]
        }
    ]
}